<h1>Editar informações</h1>

<form action="/admin/edit-info" method="POST">
    <div>
        <h2>Hambúrgueres</h2>
        <ul>
            <% data.hamburgueres.forEach(function(item, index) { %>
                <li>
                    <label for="nome<%= index %>">Nome:</label>
                    <input type="text" id="nome<%= index %>" name="hamburgueres[<%= index %>].nome" value="<%= item.nome %>">

                    <label for="descricao<%= index %>">Descrição:</label>
                    <textarea id="descricao<%= index %>" name="hamburgueres[<%= index %>].descricao"><%= item.descricao %></textarea>

                    <label for="preco<%= index %>">Preço:</label>
                    <input type="number" id="preco<%= index %>" name="hamburgueres[<%= index %>].preco" value="<%= item.preco %>">
                </li>
            <% }) %>
        </ul>
    </div>

    <button type="submit">Salvar Alterações</button>
</form>
